<div class="banner" id="index">
  <div class="banner-content">
    <h1>Cocktails Party</h1>
    <%= link_to "Add a tasty cocktail !", new_cocktail_path, class:"btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container padded">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 card">
      <a href=<%= cocktail_path cocktail.id %> >
        <%= cl_image_tag(
          cocktail.photo,
          :format => :png,
          :transformation=> [
            {:width=>100, :height=>100, :radius=>"10", :crop=>"fit"},
            {:width=>100}
          ])%>
      </a>
      <h2 class="card-description"> <%= cocktail.name %> </h2>
    </div>
    <% end %>
  </div>
</div>
